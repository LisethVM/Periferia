@model IList<Periferia.Models.EntityModels.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>
                Nombre
            </th>
            <th>
                Valor unitario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (item, i) in Model.Select((value, i) => (value, i)))
        {
        <tr>
            <td>@(i+1)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUnitario,"C")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
